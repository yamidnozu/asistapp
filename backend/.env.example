# Database configuration (replace values on the server, do NOT commit sensitive values)
# If you prefer you can set a single DATABASE_URL instead of the individual parts
DB_HOST=db
DB_PORT=5432
DB_USER=your_db_user
DB_PASS=your_db_password
DB_NAME=asistapp

# Alternatively a single DATABASE_URL example (example only):
# DATABASE_URL="postgresql://<DB_USER>:<DB_PASS>@<DB_HOST>:<DB_PORT>/<DB_NAME>?schema=public"

# JWT
JWT_SECRET=YOUR_JWT_SECRET
JWT_EXPIRES_IN=24h

# Servidor
PORT=3000
HOST="0.0.0.0"

# Entorno
# Environment
NODE_ENV=production

# Logging
LOG_LEVEL="info"

# ============================================
# WhatsApp Cloud API (Meta Business)
# ============================================
# Obtén estos valores desde developers.facebook.com > Tu App > WhatsApp > API Setup
# Documentación: https://developers.facebook.com/docs/whatsapp/cloud-api/get-started

# Token de acceso (temporal dura 24h, para producción usa System User token)
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here

# ID del número de teléfono de WhatsApp Business
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# ID de la cuenta de WhatsApp Business (opcional, para gestión avanzada)
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# ============================================
# Firebase (para futuro)
# ============================================
FIREBASE_PROJECT_ID=tu-project-id